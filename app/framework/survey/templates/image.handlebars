<form role="form">
<div class="form-group">
    {{> labelHint}}
    <input class="form-control" type="text" name="{{name}}" value="{{mediaPath}}"
            style="background-color:lightgray;"
            disabled="true"
        />
    {{#if invalid}}
        <p>invalid</p>
    {{/if}}
    <button type="button" class="captureAction btn btn-default btn-lg">Take Picture</button>
    <button type="button" class="chooseAction btn btn-default btn-lg">Choose Picture</button> 
</div>
</form>

<div class="mediaContainer">
    {{#if uriFragmentValue}}
        <img width="200" src="{{mediaPath}}"/>
    {{/if}}
</div>