<div class="odk-screen{{#unless disableSwipeNavigation}}{{#if enableNavigation}}{{#if enableForwardNavigation}} swipeForwardEnabled{{/if}}{{#if enableBackNavigation}} swipeBackEnabled{{/if}}{{/if}}{{/unless}}" >
    {{#if showHeader}}
        <div class="row odk-header container">
            <div class="my-breakpoint {{#if hideNavigationButtonText}}my-breakpoint-no-nav-btn-text{{/if}}">
                <div class="col-xs-6">
                    <button type="button" class="odk-options-btn btn btn-default btn-lg" data-toggle="modal" data-target="#myModal">
                        <span>{{localize form_title}}</span>
                    </button>
                </div>
                <div class="col-xs-3 odk-header-back-btn">
                    <a class="odk-prev-btn btn btn-default btn-lg navbar-btn 
                    {{#unless enableBackNavigation}}disabled{{/unless}}" 
                    role="button">
                    {{#unless hideNavigationButtonText}}<span class="glyphicon glyphicon-chevron-left" style="float:left"></span> back {{/unless}}</a> 
                </div>
                <div class="col-xs-3 odk-next-btn">   
                    <a class="odk-next-btn btn btn-default btn-lg navbar-btn 
                    {{#unless enableForwardNavigation}}disabled{{/unless}}"
                    role="button">
                    {{#unless hideNavigationButtonText}}{{#if showAsContinueButton}}continue {{else}}next{{/if}}<span class="glyphicon glyphicon-chevron-right" style="float:right"></span>{{/unless}}</a>               
                </div>
            </div>
        </div>
    {{/if}}
    <div class="odk-scroll"><div class="odk-container container"></div>
</div>

{{#if showFooter}} 
    <div class="row odk-footer container">
        <div class="my-breakpoint {{#if hideNavigationButtonText}}my-breakpoint-no-nav-btn-text{{/if}}">
            <div class="col-xs-3 odk-footer-back-btn ">
                <a class="odk-prev-btn btn btn-default btn-lg navbar-btn 
                {{#unless enableBackNavigation}}disabled{{/unless}}" 
                role="button">
                {{#unless hideNavigationButtonText}}<span class="glyphicon glyphicon-chevron-left" style="float:left"></span> back {{/unless}}</a> 
            </div>
            <div class="col-xs-6">

            </div>
            <div class="col-xs-3 odk-next-btn">   
                <a class="odk-next-btn btn btn-default btn-lg navbar-btn 
                {{#unless enableForwardNavigation}}disabled{{/unless}}"
                role="button">
                {{#unless hideNavigationButtonText}}{{#if showAsContinueButton}}continue {{else}}next{{/if}}<span class="glyphicon glyphicon-chevron-right" style="float:right"></span>{{/unless}}</a>               
            </div>
        </div>
    </div>
{{/if}}


