{{#if passiveError}}
    <div class="ui-bar ui-bar-a">
        {{passiveError}}
    </div>
{{/if}}

{{> labelHint}}
<table class="table table-bordered">
    <tbody>
    {{#each choices}}
        {{#if isFirstInRow}}
            <tr>
        {{/if}}  
                <td class="grid-select-item"
                {{#if checked}}
                    style="background-color:black;"
                {{else}}
                    style="background-color:white;"
                {{/if}}>
            
                <input
                    {{#if ../select_one}}
                        type="radio"
                    {{else}}
                        type="checkbox"
                    {{/if}}
                    {{#if checked}}
                        checked="checked"
                    {{/if}}
                        
                    {{! the name attribute has to be the same for all the options}}
                    style="display:none;"
                    name="{{../name}}"
                    id="{{data_value}}"
                    value="{{data_value}}" />
            {{#if display.image}}
                <center>
                    <img style="max-width: 100%;max-height: 100%;" src="{{formDirectory}}{{localize display.image}}"></img>
                </center>
            {{/if}}
            {{#if display.text}}
                {{{localize display.text}}}
            {{/if}}
            </td>
        {{#if isLastInRow}}
            </tr><!-- row -->
        {{/if}}
    {{/each}}
    </tbody>
</table><!-- container -->
{{#unless required}}
    {{#if false}}
    {{#if display.deselect}}
        <a data-role="button" data-mini="true" class="deselect">{{localize display.deselect}}</a>
    {{/if}}
    {{/if}}
{{/unless}}
<div style="clear:both;"></div>

